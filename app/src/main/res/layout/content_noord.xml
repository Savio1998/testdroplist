<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/themadd"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/llto"
        android:layout_below="@+id/themadd"
        android:layout_alignParentStart="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="- Openbare Bibliotheek Amsterdam"
            android:id="@+id/textView1"
            android:layout_marginTop="21dp"
            android:textSize="18dp"
            android:layout_below="@+id/themadd"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="- Regio Noord filiaal Hagedoornplein"
            android:id="@+id/textView2"
            android:textSize="18dp"
            android:layout_below="@+id/textView1"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="- Studiekeuze test link"
            android:id="@+id/textView3"
            android:textSize="18dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="- Opendagen MBO"
            android:id="@+id/textView4"
            android:textSize="18dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="- Bioscopen"
            android:id="@+id/textView5"
            android:textSize="18dp"
            android:layout_below="@+id/themadd"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="- Musea"
            android:id="@+id/textView6"
            android:textSize="18dp"
            android:layout_below="@+id/themadd"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="- Park (stadswandeling)"
            android:id="@+id/textView7"
            android:textSize="18dp"
            android:layout_below="@+id/themadd"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="- Buurthuizen"
            android:id="@+id/textView8"
            android:textSize="18dp"
            android:layout_below="@+id/themadd"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="- Winkelcentra&apos;s"
            android:id="@+id/textView9"
            android:textSize="18dp"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="- Theater"
            android:id="@+id/textView10"
            android:textSize="18dp"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true" />

    </LinearLayout>

</LinearLayout>